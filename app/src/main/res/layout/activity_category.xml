<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.epipasha.cashflow.data.objects.OperationType"/>
        <variable
            name="viewmodel"
            type="com.epipasha.cashflow.activities.categories.CategoryViewModel"/>
    </data>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@{viewmodel.activityTitle}"/>


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/category_detail_name"
            android:text="@string/name"
            style="@style/label" />

        <EditText
            android:id="@+id/category_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:inputType="text"
            android:padding="8dp"
            android:text="@={viewmodel.category.title}"/>

        <TextView
            style="@style/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/type" />

        <RadioGroup
            android:id="@+id/type_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/type_normal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/category_detail_in"
                style="@style/TypeButton"
                android:checked="@{viewmodel.category.type == OperationType.IN}"
                android:onClick="@{() -> viewmodel.setOperationType(OperationType.IN)}"
                android:text="@string/in"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                tools:checked="true" />

            <RadioButton
                android:id="@+id/category_detail_out"
                style="@style/TypeButton"
                android:checked="@{viewmodel.category.type == OperationType.OUT}"
                android:onClick="@{() -> viewmodel.setOperationType(OperationType.OUT)}"
                android:text="@string/out"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

        </RadioGroup>
    </LinearLayout>

</LinearLayout>
</layout>