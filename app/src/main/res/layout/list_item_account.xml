<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_layout">

    <TextView
        android:text="Name"
        android:id="@+id/account_list_item_name"
        style="@style/list_item_text" />

    <TextView
        android:text="RUB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_list_item_currency"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="right|center_vertical"
        android:textSize="24sp" />

    <TextView
        android:text="123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_list_item_sum"
        android:gravity="right|center_vertical"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/account_list_item_currency"
        android:layout_toStartOf="@+id/account_list_item_currency"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>