<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_out"
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/out"
        app:layout_constraintStart_toStartOf="@+id/pb_in"
        app:layout_constraintTop_toBottomOf="@+id/pb_in" />

    <TextView
        android:id="@+id/lbl_in"
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/in"
        app:layout_constraintStart_toStartOf="@+id/lblCashflow"
        app:layout_constraintTop_toBottomOf="@+id/lblCashflow" />

    <TextView
        android:id="@+id/lblCashflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/cashflow"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCashflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/lblCashflow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblCashflow"
        app:layout_constraintVertical_bias="0.0"
        tools:text="10000" />

    <ProgressBar
        android:id="@+id/pb_in"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:max="5000"
        tools:progress="3000"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/tvCashflow"
        app:layout_constraintStart_toStartOf="@+id/lbl_in"
        app:layout_constraintTop_toBottomOf="@+id/lbl_in" />

    <ProgressBar
        android:id="@+id/pb_out"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:max="7000"
        tools:progress="1000"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pb_in"
        app:layout_constraintStart_toStartOf="@+id/lbl_out"
        app:layout_constraintTop_toBottomOf="@+id/lbl_out" />

    <TextView
        android:id="@+id/tv_progress_in_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/pb_in"
        app:layout_constraintEnd_toEndOf="@+id/pb_in"
        app:layout_constraintTop_toTopOf="@+id/pb_in"
        tools:text="3000 / 5000" />

    <TextView
        android:id="@+id/tv_progress_out_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/pb_out"
        app:layout_constraintEnd_toEndOf="@+id/pb_out"
        app:layout_constraintTop_toTopOf="@+id/pb_out"
        tools:text="1000 / 7000" />

</android.support.constraint.ConstraintLayout>
